<style>
  .animate-fade-up {
    opacity: 0;
    animation: fadeUp 0.6s ease-out forwards;
  }

  .animate-slide-up {
    opacity: 0;
    animation: slideUp 0.6s ease-out forwards;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .tab-button {
    color: var(--color-gray-400);
    border-color: transparent;
    position: relative;
    overflow: hidden;
  }

  .tab-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, var(--color-primary-500) 0%, transparent 70%);
    opacity: 0;
    transform: translateY(-50%) scale(0.5);
    transition: all 0.3s ease;
    z-index: -1;
    pointer-events: none;
  }

  .tab-button:hover::before {
    opacity: 0.1;
    transform: translateY(-50%) scale(1);
  }

  .tab-button.active {
    color: var(--color-primary-500);
  }

  .tab-button.active .tab-line {
    transform: scaleX(1);
  }

  .tab-button.active::before {
    opacity: 0.15;
    transform: translateY(-50%) scale(1);
  }

  .tab-button:hover .tab-glow {
    display: block;
  }

  .tab-button.active .tab-glow {
    display: block;
    background: var(--color-primary-500/30);
  }

  @keyframes tabPulse {
    0% {
      box-shadow: 0 0 0 0 rgba(var(--color-primary-500-rgb), 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(var(--color-primary-500-rgb), 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(var(--color-primary-500-rgb), 0);
    }
  }

  .tab-button.active {
    animation: tabPulse 2s infinite;
  }

  .service-section {
    display: none;
  }

  .service-section.active {
    display: block;
  }
</style>

<script>
  // Handle tab switching
  const tabButtons = document.querySelectorAll('.tab-button');
  const sections = document.querySelectorAll('.service-section');

  function setActiveTab(tabId) {
    // Update tab buttons with enhanced animation
    tabButtons.forEach(button => {
      if (button.dataset.tab === tabId) {
        button.classList.add('active');
        // Add smooth entrance animation for the line
        const line = button.querySelector('.tab-line');
        if (line) {
          line.style.transition = 'transform 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
          line.style.transform = 'scaleX(1)';
        }
      } else {
        button.classList.remove('active');
        // Smooth exit animation
        const line = button.querySelector('.tab-line');
        if (line) {
          line.style.transition = 'transform 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
          line.style.transform = 'scaleX(0)';
        }
      }
    });

    // Update sections with enhanced animation
    sections.forEach(section => {
      if (section.id === `${tabId}-section`) {
        section.classList.add('active');
        section.classList.remove('hidden');
        // Add entrance animation
        section.style.animation = 'fadeIn 0.5s ease-out forwards';
      } else {
        // Add exit animation
        section.style.animation = 'fadeOut 0.3s ease-out forwards';
        setTimeout(() => {
          section.classList.remove('active');
          section.classList.add('hidden');
        }, 300);
      }
    });
  }

  // Set initial active tab
  setActiveTab('tech');

  // Add click handlers
  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      setActiveTab(button.dataset.tab);
    });
  });
</script> 