                <div class="relative overflow-hidden rounded-lg bg-dark-800/50 p-6 group">
                  <!-- Animated gradient bar -->
                  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary-500 via-secondary-500 to-accent-500 animate-gradient"></div>
                  
                  <h4 class="text-lg font-semibold text-white mb-3">India Office</h4>
                  <div class="space-y-4">
                    <div class="flex items-start space-x-3 group">
                      <svg class="w-5 h-5 text-primary-400 mt-0.5 flex-shrink-0 group-hover:text-primary-300 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
