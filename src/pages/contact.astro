                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                    </svg>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <script define:vars={{ isDev: import.meta.env.DEV }}>
  const form = document.getElementById('contact-form');
  const submitButton = document.getElementById('submit-button');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');
  const errorText = errorMessage?.querySelector('.error-text');

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Show loading state
      submitButton.classList.add('loading');
      submitButton.disabled = true;
      
      // Hide any existing messages
      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');
      
      try {
        const formData = new FormData(form);
        const object = Object.fromEntries(formData);
        
        // Log data only in development
        if (isDev) {
          console.log('Sending form data:', object);
        }
        
        const response = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify(object)
        });

        // Log response only in development
        if (isDev) {
          console.log('Response status:', response.status);
        }
        
        const data = await response.json();
        
        // Log response data only in development
        if (isDev) {
          console.log('Form submission response:', data);
        }

        if (data.success) {
          // Show success message
          successMessage.classList.remove('hidden');
          form.reset();
          
          // Log success details only in development
          if (isDev) {
            console.log('Form submitted successfully!');
            console.log('Submission ID:', data.submission_id);
          }
        } else {
          // Show specific error message
          const errorMsg = data.message || 'Oops! Something went wrong. Please try again later.';
          errorText.textContent = errorMsg;
          errorMessage.classList.remove('hidden');
          
          // Log error details only in development
          if (isDev) {
            console.error('Form submission failed:', {
              status: response.status,
              message: errorMsg,
              data: data
            });
          }
        }
      } catch (error) {
        // Log error only in development
        if (isDev) {
          console.error('Form submission error:', error);
        }
        
        // Show error message
        const errorMsg = error.message || 'Network error. Please check your connection and try again.';
        errorText.textContent = errorMsg;
        errorMessage.classList.remove('hidden');
      } finally {
        // Hide loading state
        submitButton.classList.remove('loading');
        submitButton.disabled = false;
      }
    });
  }
  </script>
