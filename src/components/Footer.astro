const offices = [
  {
    name: 'India Office',
    address: 'Fugeniz Pvt Ltd, Cochin, Kerala, India',
    phone: '+91 7012813115',
    email: 'info@fugeniz.com'
  },
  {
    name: 'UK Office',
    comingSoon: true,
    address: 'Coming Soon',
    animatedText: 'Expanding to serve you better!',
    estimatedDate: '2026'
  }
];
---

<footer class="bg-dark-950 border-t border-dark-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-2 mb-6">
          <div class="w-10 h-10 rounded-lg flex items-center justify-center bg-white">
            <img src="/assets/vite.svg" alt="Fugeniz Logo" class="w-10 h-10 object-contain" />
          </div>
          <span class="text-xl font-bold text-white">Fugeniz</span>
        </div>
        <p class="text-gray-400 mb-6 leading-relaxed">
          Empowering businesses with Fugen Intelligence (FI) for transformative growth. 
          So real, you'll forget Artificial.
        </p>
        
        <!-- Social Links -->
        <div class="flex space-x-4">
          <a
            href="https://linkedin.com/company/fugeniz"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-dark-800 hover:bg-primary-500 rounded-lg flex items-center justify-center text-gray-400 hover:text-white transition-all duration-200 hover:scale-110"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href="https://wa.me/919876543210"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-dark-800 hover:bg-green-500 rounded-lg flex items-center justify-center text-gray-400 hover:text-white transition-all duration-200 hover:scale-110"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
